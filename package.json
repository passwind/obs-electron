{
  "name": "svelte-app",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "build": "rollup -c --bundleConfigAsCjs", 
    "dev": "rollup -c -w --bundleConfigAsCjs",
    "start": "electron .",
    "lint": "npx standard --fix && npx standard --parser svelte-eslint-parser --plugin svelte '**/*.svelte' --fix",
    "electron:build": "electron-builder"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "<7",
    "@mdi/js": "^7.4.47",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-html": "^1.1.0",
    "@rollup/plugin-node-resolve": "^16",
    "@rollup/plugin-terser": "^0.4.4",
    "bulma": "<1",
    "compare-versions": "^6.1.1",
    "electron": "^33.3.1",
    "electron-builder": "^25.1.8",
    "eslint-plugin-svelte": "^2.46.1",
    "mdi-svelte": "^1.1.2",
    "obs-websocket-js": "^5.0.1",
    "postcss": "^8.4.49",
    "rollup": "^4",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-svelte": "^7.2.0",
    "sass": "^1.83.1",
    "standard": "^17.1.2",
    "svelte": "<5"
  },
  "dependencies": {
    "sirv-cli": "^3"
  },
  "build": {
    "appId": "com.example.svelteapp",
    "productName": "SvelteApp", 
    "files": [
      "public/**/*",
      "main.js"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    }
  }
}
